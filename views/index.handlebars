

<main>
  <div class="container">
    <div class="row">
      <div class="col s7">
        Burger Menu:
        <br><br>
        
        {{#each burgers}}
          {{#unless devoured}}
            <div>
              <form action="/burgers/" data-id="{{this.id}}" data-notEaten="true">
                {{this.id}} - {{this.burger_name}}
                <button type="submit" class='devour' id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devoured}}"> 
                  DEVOUR!
                </button>
              </form>
              <br>
            </div>
          {{/unless}}
        {{/each}}
      </div>


      <div class="col s5">
        Burgers Devoured!
        <br><br>
        {{#each burgers}}
          {{#if devoured}}
            <div class='burgerEaten'>
              <div>
                {{burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST" class="create-form">
      <input type="text" id="name" name="burger_name" placeholder="+BURGER to menu">
      <button type="submit" id="burger">+BURGER</button>
    </form>
  </div>
</div>