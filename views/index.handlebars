

<main>
  <div class="container">
    <div class="row">
      <div class="col s5">
        Burger Menu:
        <br><br>
        
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/" data-id="{{id}}" data-notEaten="true">
                {{burger_name}}
                <button type="submit" class='devour'> 
                  DEVOUR!
                </button>
              </form>
              <br>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s2">
         <form action="/burgers" method="POST">
      <button type="submit" class="devour">+DEVOUR</button>
    </form>
      </div>

      <div class="col s5">
        Burgers Devoured!
        <br><br>
        {{#each burgers}}
          {{#if devoured}}
            <div class='burgerEaten'>
              <div>
                {{burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST" class="create-form">
      <input type="text" id="name" name="burger_name" placeholder="+BURGER to menu">
      <button type="submit" id="burger">+Burger</button>
    </form>
  </div>
</div>